<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="discount_money_form" model="ir.ui.view">
        <field name="name">discount.money.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='price_subtotal']" position="before">
                <field name="discount_money"/>
                <field name="time_intervaler" string="Warranty left"/>
            </xpath>
        </field>
    </record>

    <record id="Calculated_discount_total_form" model="ir.ui.view">
        <field name="name">Calculated.discount.total.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group//group//field[@name='tax_totals_json']" position="before">
                <field name="Calculated_discount_total" widget="monetary"/>

            </xpath>
        </field>
    </record>

    <record id="custom_font_end_tree_View" model="ir.ui.view">
        <field name="name">custom_font_end_tree_View</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <!-- Add new fields here -->


            </xpath>

        </field>
    </record>

    <template id="custom_font_end" inherit_id="website_sale.cart_lines">
        <xpath expr="//t[1]//table[1]//tbody[1]//t[1]//tr[1]//td[3]//div[1]//t[1]//strong[1][@t-field='line.name_short']"
               position="after">
            <p>
                <strong itemprop="name" t-field="line.product_id.warranty">Product warranty</strong>
            </p>

        </xpath>
    </template>

    <template id="product_warranty_inherit" name="My product Inherit" inherit_id="website_sale.product">
        <xpath expr="//h1[@t-field='product.name']" position="after">
            <h5 itemprop="name" t-field="product.warranty">Product warranty</h5>
        </xpath>
    </template>


</odoo>